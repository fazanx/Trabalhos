<body>
    <h1>Tabela de Nomes</h1>
    <button onclick="adicionarNomes()">Adicionar Nomes</button>
    <table id="tabelaNomes">
        <thead>
            <tr>
                <th>√çndice</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <script>
        function adicionarNomes() {
            let indice = 1;
            const tabela = document.getElementById("tabelaNomes").getElementsByTagName("tbody")[0];

            while (true) {
                const nome = prompt("Digite um nome (ou clique em Cancelar para finalizar):");

                if (nome === null) {
                    break;
                }

                // Criar uma nova linha e inserir os dados
                const linha = tabela.insertRow();
                const celulaIndice = linha.insertCell(0);
                const celulaNome = linha.insertCell(1);

                celulaIndice.textContent = indice;
                celulaNome.textContent = nome;

                indice++;
            }
        }
    </script>
</body>
